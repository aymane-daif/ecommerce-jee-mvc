<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ecomm</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>/ecomm/WelcomeController</welcome-file>
    
  </welcome-file-list>
  
  <servlet>  
    <servlet-name>WelcomeController</servlet-name>  
    <servlet-class>ma.ensa.controllers.WelcomeController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>WelcomeController</servlet-name>  
  	<url-pattern>/WelcomeController</url-pattern>
  </servlet-mapping>
  
  <servlet>  
    <servlet-name>SignUpController</servlet-name>  
    <servlet-class>ma.ensa.controllers.SignUpController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>SignUpController</servlet-name>  
  	<url-pattern>/SignUpController</url-pattern>
  </servlet-mapping>
  
  <servlet>  
    <servlet-name>SignInController</servlet-name>  
    <servlet-class>ma.ensa.controllers.SignInController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>SignInController</servlet-name>  
  	<url-pattern>/SignInController</url-pattern>
  </servlet-mapping>
  
   <servlet>  
    <servlet-name>ArticleController</servlet-name>  
    <servlet-class>ma.ensa.controllers.ArticleController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>ArticleController</servlet-name>  
  	<url-pattern>/ArticleController</url-pattern>
  </servlet-mapping>
  
  <servlet>  
    <servlet-name>CategorieController</servlet-name>  
    <servlet-class>ma.ensa.controllers.CategorieController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>CategorieController</servlet-name>  
  	<url-pattern>/CategorieController</url-pattern>
  </servlet-mapping>
  
  <servlet>  
    <servlet-name>CommandeController</servlet-name>  
    <servlet-class>ma.ensa.controllers.CommandeController</servlet-class>    
  </servlet>  
  <servlet-mapping>
  	<servlet-name>CommandeController</servlet-name>  
  	<url-pattern>/CommandeController</url-pattern>
  </servlet-mapping>
  

  
  <context-param>  
    <param-name>url</param-name>  
    <param-value>jdbc:mysql://localhost:3306/ecommerce?serverTimezone=UTC</param-value>  
  </context-param>  
  <context-param>  
    <param-name>driver</param-name>  
    <param-value>com.mysql.cj.jdbc.Driver</param-value>  
  </context-param>  
   <context-param>  
    <param-name>username</param-name>  
    <param-value>root</param-value>  
  </context-param>   
  <context-param>  
    <param-name>password</param-name>  
    <param-value>root</param-value>  
  </context-param>  
</web-app>